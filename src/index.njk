---
pagination:
  data: collections.postsList
  size: 4
  alias: posts
---
{% extends "base.njk" %}
{% block main %}
<main>
    {% for post in posts %}
        <article>
            <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
            <p>{{ post.data.description }}</p>
        </article>
    {% endfor %}
    {% include "pagination.njk" %}
</main>
{% endblock %}