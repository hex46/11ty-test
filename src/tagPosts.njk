---
pagination:
    data: collections
    size: 1
    alias: tag
permalink: /tags/{{ tag }}/
---
 
{% extends "base.njk" %}
{% block main %}
<main>
    {% for post in collections[tag] %}
        <article>
            <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
            <p>{{ post.data.description }}</p>
        </article>
    {% endfor %}
</main>
{% endblock %}